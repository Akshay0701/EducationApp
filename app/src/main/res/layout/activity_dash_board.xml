<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userPages.DashBoard">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/linearx"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linearc"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/buttondesign"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="200dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:paddingLeft="20dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_greet"
                            android:layout_width="match_parent"
                            android:text="Good Morning"
                            android:layout_marginTop="30dp"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            android:textSize="30dp"
                            android:layout_height="wrap_content"></TextView>
                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="match_parent"
                            android:text="Akshay Jadhav"
                            android:textColor="@color/colorAccent"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            android:layout_height="wrap_content"></TextView>
                        <TextView
                            android:id="@+id/txt_dash_grade"
                            android:layout_width="match_parent"
                            android:visibility="invisible"
                            android:text="Grade"
                            android:textColor="@color/colorAccent"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="100dp"
                        android:src="@drawable/earthimg"
                        android:layout_marginRight="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="100dp"></ImageView>
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_dashBorad"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/linearc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/linearx"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:weightSum="4"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/button_userProfile"
            android:layout_width="50dp"
            android:background="#00000000"
            android:layout_gravity="center"
            android:src="@drawable/profileicon"
            android:layout_weight="1"
            android:layout_height="50dp"></ImageView>
        <ImageView
            android:id="@+id/button_grade"
            android:layout_width="50dp"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_height="50dp"></ImageView>
        <ImageView
            android:id="@+id/button_medium"
            android:layout_width="50dp"
            android:background="#00000000"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="50dp"></ImageView>
        <ImageView
            android:id="@+id/button_logout"
            android:layout_width="50dp"
            android:background="#00000000"
            android:layout_gravity="center"
            android:src="@drawable/logouticon"
            android:layout_weight="1"
            android:layout_height="50dp"></ImageView>
    </LinearLayout>
</RelativeLayout>